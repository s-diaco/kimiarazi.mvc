@section head{
    <title>@Resources.Services.PageTitle</title>
}

@section Scripts{
    <!-- animated scroll loading effect -->
    <script type="text/javascript">
        jQuery(document).ready(function () {
            jQuery('.post').addClass("not-visible").viewportChecker({
                classToAdd: 'visible animated fadeInUp',
                offset: 100
            });
        });
    </script>
}

<!-- Services Desc Section -->
<section id="portfolio" class="bg-light-gray">
    <div class="container kr-background">
        <div class="row post">
            <div class="col-lg-7">
                <h2 class="section-heading"><i class="fa fa-spinner"></i> @Resources.Services.Head</h2>
                <h3 class="section-subheading text-muted">@Resources.Services.Subhead</h3>
            </div>
            <div class="col-xs-12 col-lg-10 col-lg-offset-1 text-justify">
                @Html.Raw(Resources.Services.Desc)
            </div>
        </div>
    </div>
</section>

